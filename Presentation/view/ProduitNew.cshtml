@page
@model erp_pfc_20252026.Pages.ProduitNewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Nouveau produit";
}
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="~/css/Common.css" />
<link rel="stylesheet" href="~/css/Home.css" />
<link rel="stylesheet" href="~/css/Produits.css" />

<div class="erp-shell">
    <!-- BARRE LATERALE GAUCHE -->
    <aside class="erp-sidebar">
        <div class="erp-logo">
            <span class="erp-logo-mark">E</span>
            <span class="erp-logo-text">ERP Suite</span>
        </div>
        <nav class="erp-nav">
            <a asp-page="/Home" class="nav-item">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                <span>Accueil</span>
            </a>
            <a asp-page="/Fabrication" class="nav-item nav-item-active">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 9h12M6 12h12M6 15h12M3 3h18a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z"></path>
                </svg>
                <span>Modules</span>
            </a>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <span>Profils</span>
            </button>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
                <span>Bases ERP</span>
            </button>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="1"></circle>
                    <path d="M12 1v6m6.07 6.07h-6.14M12 19v4m6.07-6.07v0"></path>
                    <path d="M19 5l-4.24 4.24M5 19l4.24-4.24"></path>
                    <path d="M19 19l-4.24-4.24M5 5l4.24 4.24"></path>
                </svg>
                <span>Paramètres</span>
            </button>
        </nav>
        <div class="erp-sidebar-footer">
            <button class="sidebar-quick" type="button">
                <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Nouveau profil
            </button>
            <button class="sidebar-quick secondary" type="button" onclick="openLogoutModal()">
                <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                    <polyline points="16 3 16 10 13 7"></polyline>
                    <path d="M16 10v7a2 2 0 0 1-2 2h-2"></path>
                </svg>
                Déconnexion
            </button>
        </div>
    </aside>

    <!-- CONTENU PRINCIPAL -->
    <main class="erp-main">
        <header class="erp-header">
            <div class="header-left">
                <h1>Nouveau produit</h1>
                <p>Définir les informations principales du produit.</p>
            </div>
            <div class="header-right">
                <div class="header-db">
                    <span class="header-db-label">Base active</span>
                    <span class="header-db-name">erp_db</span>
                </div>
                <button class="header-btn" type="button">
                    <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 4v6h6"></path>
                        <path d="M23 20v-6h-6"></path>
                        <path d="M20.49 9A9 9 0 0 0 5.64 5.64"></path>
                        <path d="M3.51 15A9 9 0 0 0 18.36 18.36"></path>
                    </svg>
                    Changer de base
                </button>
                <button class="header-profile-btn" type="button">
                    <div class="header-avatar">P</div>
                </button>
            </div>
        </header>

        <section class="erp-content">
            <div class="product-form-card">

                @if (!string.IsNullOrWhiteSpace(Model.Message))
                {
                    <div class="alert-info">
                        @Model.Message
                    </div>
                }

                <form id="produit-new-form" method="post" enctype="multipart/form-data">
                    <!-- LIGNE 1 -->
                    <div class="form-row form-row-3">
                        <div class="form-group">
                            <label for="ProductName" class="form-label">Nom du produit</label>
                            <input id="ProductName" name="ProductName" type="text" class="form-input" placeholder="par ex. Cheeseburger" required />
                            <span asp-validation-for="NouveauProduit.Nom" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Reference" class="form-label">Référence interne</label>
                            <input id="Reference" name="Reference" type="text" class="form-input" placeholder="Code interne, SKU..." />
                            <span asp-validation-for="NouveauProduit.Reference" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Type de produit</label>
                            <div class="radio-group-horizontal">
                                <label class="radio-label">
                                    <input type="radio" name="ProductType" value="Bien" checked />
                                    <span>Bien</span>
                                </label>
                                <label class="radio-label">
                                    <input type="radio" name="ProductType" value="Service" />
                                    <span>Service</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- LIGNE 2 -->
                    <div class="form-row form-row-3">
                        <div class="form-group">
                            <label for="Barcode" class="form-label">Code-barres</label>
                            <input id="Barcode" name="Barcode" type="text" class="form-input" placeholder="EAN, UPC..." />
                        </div>
                        <div class="form-group">
                            <label for="SalePrice" class="form-label">Prix de vente</label>
                            <div class="input-group">
                                <input id="SalePrice" name="SalePrice" type="number" step="0.01" min="0" class="form-input form-input-number" placeholder="0,00" />
                                <span class="input-suffix">DA</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Cost" class="form-label">Coût</label>
                            <div class="input-group">
                                <input id="Cost" name="Cost" type="number" step="0.01" min="0" class="form-input form-input-number" placeholder="0,00" />
                                <span class="input-suffix">DA</span>
                            </div>
                        </div>
                    </div>

                    <!-- LIGNE 3 -->
                    <div class="form-row form-row-3">
                        <div class="form-group">
                            <label class="form-label">Disponible à la vente</label>
                            <label class="checkbox-inline">
                                <input type="checkbox" name="IsSaleable" checked />
                                <span>Oui</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Suivre l'inventaire</label>
                            <label class="checkbox-inline">
                                <input type="checkbox" name="TrackInventory" checked />
                                <span>Par quantité</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <label for="ProductImage" class="form-label">Image du produit</label>
                            <input id="ProductImage" name="ProductImage" type="file" accept="image/*" class="file-input-hidden" />
                            <label for="ProductImage" class="file-input-button-mini">
                                <svg style="width: 12px; height: 12px; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                    <polyline points="17 8 12 3 7 8"></polyline>
                                    <line x1="12" y1="3" x2="12" y2="15"></line>
                                </svg>
                                <span>Choisir</span>
                            </label>
                            <span id="file-name-display" class="file-name-display"></span>
                        </div>
                    </div>

                    <!-- LIGNE 4 -->
                    <div class="form-row form-row-1">
                        <div class="form-group">
                            <label for="Comment" class="form-label">Notes internes</label>
                            <textarea id="Comment" name="Comment" class="form-input form-textarea" placeholder="Cette note est pour usage interne seulement." rows="4"></textarea>
                        </div>
                    </div>

                    <!-- FOOTER -->
                    <div class="form-footer">
                        <button type="submit" class="btn-primary">Enregistrer</button>
                        <a asp-page="/Fabrication" class="btn-secondary btn-cancel">Annuler</a>
                    </div>
                </form>
            </div>
        </section>
    </main>
</div>

<!-- POPUP DÉCONNEXION -->
<div id="logout-overlay" class="logout-overlay" style="display:none;">
    <div class="logout-modal">
        <h3>Confirmer la déconnexion</h3>
        <p>Voulez-vous vraiment vous déconnecter et revenir à l'écran de choix du profil ?</p>
        <form method="post" asp-page-handler="Logout" class="logout-modal-actions">
            <button type="button" class="btn-secondary" onclick="closeLogoutModal()">Non, rester</button>
            <button type="submit" class="btn-primary">Oui, se déconnecter</button>
        </form>
    </div>
</div>

<script src="~/js/Home.js"></script>
<script>
    document.getElementById('ProductImage').addEventListener('change', function (e) {
        const fileName = e.target.files[0]?.name || '';
        document.getElementById('file-name-display').textContent = fileName;
    });

    // LOG du formulaire au submit
    document.getElementById('produit-new-form').addEventListener('submit', function (e) {
        console.log('[JS] Formulaire produit-new-form en cours de submission...');
        const formData = new FormData(this);
        console.log('[JS] ProductName:', formData.get('ProductName'));
        console.log('[JS] Reference:', formData.get('Reference'));
        console.log('[JS] URL actuelle:', window.location.href);
    });

    function openLogoutModal() {
        document.getElementById('logout-overlay').style.display = 'flex';
    }
    function closeLogoutModal() {
        document.getElementById('logout-overlay').style.display = 'none';
    }
</script>

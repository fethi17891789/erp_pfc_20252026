@page "{id?}"
@model erp_pfc_20252026.Pages.ProduitNewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var isEdit = Model.NouveauProduit != null && Model.NouveauProduit.Id > 0;
    ViewData["Title"] = isEdit ? "Modifier produit" : "Nouveau produit";
}
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" />
<link rel="stylesheet" href="~/css/Common.css" />
<link rel="stylesheet" href="~/css/Home.css" />

<style>
    /* Etat désactivé du coût d'achat, aligné sur la charte */
    .cost-input-disabled {
        background: linear-gradient(135deg, rgba(8, 11, 32, 0.9), rgba(18, 22, 54, 0.95));
        color: rgba(226, 232, 240, 0.65);
        cursor: not-allowed;
        border-color: rgba(148, 163, 253, 0.55) !important;
        box-shadow: 0 0 0 1px rgba(148, 163, 253, 0.45), 0 15px 35px rgba(15, 23, 42, 0.9), inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }

    .cost-disabled-overlay {
        position: relative;
    }

    .cost-disabled-label {
        color: #a5b4fc;
        text-shadow: 0 0 12px rgba(129, 140, 248, 0.55);
    }

    .cost-disabled-tooltip {
        position: absolute;
        bottom: 110%;
        left: 0;
        display: flex;
        align-items: flex-start;
        gap: 8px;
        padding: 8px 12px;
        border-radius: var(--radius-md);
        background: radial-gradient(circle at top left, rgba(123, 94, 255, 0.35), transparent 60%), linear-gradient(135deg, rgba(15, 23, 42, 0.98), rgba(3, 7, 18, 0.98));
        border: 1px solid rgba(148, 163, 253, 0.6);
        box-shadow: 0 18px 50px rgba(15, 23, 42, 0.95);
        color: #e5e7eb;
        font-size: 0.78rem;
        max-width: 280px;
        opacity: 0;
        transform: translateY(4px) scale(0.98);
        pointer-events: none;
        transition: opacity 0.16s cubic-bezier(0.16, 1, 0.3, 1), transform 0.18s cubic-bezier(0.16, 1, 0.3, 1);
        z-index: 40;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

        .cost-disabled-tooltip::after {
            content: "";
            position: absolute;
            top: 100%;
            left: 16px;
            border-width: 7px;
            border-style: solid;
            border-color: rgba(15, 23, 42, 0.98) transparent transparent transparent;
            filter: drop-shadow(0 4px 6px rgba(15, 23, 42, 0.8));
        }

    .cost-disabled-tooltip-icon {
        width: 18px;
        height: 18px;
        border-radius: 999px;
        background: radial-gradient(circle at 30% 30%, #facc15, #eab308);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #111827;
        font-size: 0.7rem;
        font-weight: 800;
        box-shadow: 0 0 0 1px rgba(250, 204, 21, 0.35), 0 0 16px rgba(250, 204, 21, 0.8);
        flex-shrink: 0;
    }

    .cost-disabled-tooltip-text {
        line-height: 1.4;
        color: #c7d2fe;
    }

        .cost-disabled-tooltip-text span {
            display: block;
        }

        .cost-disabled-tooltip-text .tooltip-title {
            font-weight: 600;
            font-size: 0.8rem;
            color: #e5e7eb;
            margin-bottom: 2px;
        }

        .cost-disabled-tooltip-text .tooltip-sub {
            font-size: 0.78rem;
            color: #a5b4fc;
        }

    .cost-disabled-overlay:hover .cost-disabled-tooltip {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    /* Reuse style for sale price messages */
    .saleprice-tooltip {
        bottom: 110%;
    }
</style>

<div class="erp-shell">
    <!-- BARRE LATERALE GAUCHE -->
    <aside class="erp-sidebar">
        <div class="erp-logo">
            <span class="erp-logo-mark">E</span>
            <span class="erp-logo-text">ERP Suite</span>
        </div>
        <nav class="erp-nav">
            <a asp-page="/Home" class="nav-item">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
            </a>
            <a asp-page="/Fabrication" class="nav-item nav-item-active">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 9h12M6 12h12M6 15h12M3 3h18a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z"></path>
                </svg>
                <span>Modules</span>
            </a>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 1-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <span>Profils</span>
            </button>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
                <span>Bases ERP</span>
            </button>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="1"></circle>
                    <path d="M12 1v6m6.07 6.07h-6.14M12 19v4m6.07-6.07v0"></path>
                    <path d="M19 5l-4.24 4.24M5 19l4.24-4.24M19 19l-4.24-4.24M5 5l4.24 4.24"></path>
                </svg>
                <span>Paramètres</span>
            </button>
        </nav>
        <div class="erp-sidebar-footer">
            <button class="sidebar-quick" type="button">
                <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Nouveau profil
            </button>
            <button class="sidebar-quick secondary" type="button" onclick="openLogoutModal()">
                <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                    <polyline points="16 3 16 10 13 7"></polyline>
                    <path d="M16 10v7a2 2 0 0 1-2 2h-2"></path>
                </svg>
                Déconnexion
            </button>
        </div>
    </aside>

    <!-- CONTENU PRINCIPAL -->
    <main class="erp-main">
        @if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
        {
            <div id="product-success-toast" class="toast-success">
                <div class="toast-success-icon">✔</div>
                <span>@Model.SuccessMessage</span>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
        {
            <div id="product-error-toast" class="toast-error">
                <div class="toast-error-icon">!</div>
                <span>@Model.ErrorMessage</span>
            </div>
        }

        <header class="erp-header">
            <div class="header-left">
                <h1>@(isEdit ? "Modifier le produit" : "Nouveau produit")</h1>
                <p>@(isEdit ? "Mettre à jour les informations du produit." : "Définir les informations principales du produit.")</p>
            </div>
            <div class="header-right">
                <div class="header-db">
                    <span class="header-db-label">Base active</span>
                    <span class="header-db-name">erp_db</span>
                </div>
                <button class="header-btn" type="button">
                    <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 4v6h6"></path>
                        <path d="M23 20v-6h-6"></path>
                        <path d="M20.49 9A9 9 0 0 0 5.64 5.64"></path>
                        <path d="M3.51 15A9 9 0 0 0 18.36 18.36"></path>
                    </svg>
                    Changer de base
                </button>
                <button class="header-profile-btn" type="button">
                    <div class="header-avatar">P</div>
                </button>
            </div>
        </header>

        <section class="erp-content">
            <div class="product-form-card">
                <form id="produit-new-form" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="Id" value="@Model.NouveauProduit.Id" />
                    <input type="hidden" name="ReturnToBom" value="@(Model.ReturnToBom ? "true" : "false")" />
                    <input type="hidden" name="InitialName" value="@Model.InitialName" />
                    <!-- Champ caché pour Autres charges (toujours à 0) -->
                    <input type="hidden" name="CoutAutresCharges" value="0" />

                    <!-- LIGNE 1 : base -->
                    <div class="form-row form-row-3">
                        <div class="form-group">
                            <label for="ProductName" class="form-label">Nom du produit</label>
                            <input id="ProductName" name="ProductName" type="text" class="form-input"
                                   value="@Model.NouveauProduit.Nom"
                                   placeholder="par ex. Cheeseburger" required />
                        </div>
                        <div class="form-group">
                            <label for="Reference" class="form-label">Référence interne</label>
                            <input id="Reference" name="Reference" type="text" class="form-input"
                                   value="@Model.NouveauProduit.Reference"
                                   placeholder="Code interne, SKU..." />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Type commercial</label>
                            <div class="radio-group-horizontal">
                                <label class="radio-label">
                                    <input type="radio" name="ProductType" value="Bien"
                                           @(string.IsNullOrEmpty(Model.NouveauProduit.Type) || Model.NouveauProduit.Type == "Bien" ? "checked" : "") />
                                    <span>Bien</span>
                                </label>
                                <label class="radio-label">
                                    <input type="radio" name="ProductType" value="Service"
                                           @(Model.NouveauProduit.Type == "Service" ? "checked" : "") />
                                    <span>Service</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- LIGNE 2 : prix de vente + coût achat de base -->
                    <div class="form-row form-row-3">
                        <div class="form-group">
                            <label for="Barcode" class="form-label">Code-barres</label>
                            <input id="Barcode" name="Barcode" type="text" class="form-input"
                                   value="@Model.NouveauProduit.CodeBarres"
                                   placeholder="EAN, UPC..." />
                        </div>

                        <div class="form-group cost-disabled-overlay" id="SalePriceContainer">
                            <label id="SalePriceLabel" for="SalePrice" class="form-label">Prix de vente</label>
                            <div class="input-group">
                                <input id="SalePrice" name="SalePrice" type="number" step="0.01" min="0"
                                       class="form-input form-input-number"
                                       value="@(Model.NouveauProduit.PrixVente)"
                                       placeholder="0,00" />
                                <span class="input-suffix">DA</span>
                            </div>
                            <!-- Tooltip : prix de vente non autorisé (MP ou SF) -->
                            <div id="SalePriceForbiddenTooltip" class="cost-disabled-tooltip saleprice-tooltip">
                                <div class="cost-disabled-tooltip-icon">!</div>
                                <div class="cost-disabled-tooltip-text">
                                    <span class="tooltip-title">Prix de vente non disponible</span>
                                    <span class="tooltip-sub">
                                        Le type technique sélectionné ne permet pas de saisir un prix de vente.
                                        Ce produit est uniquement utilisé comme entrée de fabrication.
                                    </span>
                                </div>
                            </div>
                            <!-- Tooltip : prix pour la version finie -->
                            <div id="SalePriceInfoTooltip" class="cost-disabled-tooltip saleprice-tooltip">
                                <div class="cost-disabled-tooltip-icon">i</div>
                                <div class="cost-disabled-tooltip-text">
                                    <span class="tooltip-title">Prix de vente du produit fini</span>
                                    <span class="tooltip-sub">
                                        Ce prix s'applique uniquement à la version vendue du produit
                                        (produit fini), pas à la partie utilisée comme semi-fini.
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group cost-disabled-overlay">
                            <label id="CostLabel" for="Cost" class="form-label">Coût d'achat de base</label>
                            <div class="input-group">
                                <input id="Cost" name="Cost" type="number" step="0.01" min="0"
                                       class="form-input form-input-number"
                                       value="@(Model.NouveauProduit.Cout)"
                                       placeholder="0,00" />
                                <span class="input-suffix">DA</span>
                            </div>
                            <div id="CostNoneOverlay" class="cost-disabled-tooltip">
                                <div class="cost-disabled-tooltip-icon">!</div>
                                <div class="cost-disabled-tooltip-text">
                                    <span class="tooltip-title">Coût d'achat non disponible</span>
                                    <span class="tooltip-sub">
                                        Le type de produit sélectionné (produit semi-fini ou produit fini)
                                        ne peut pas avoir de coût d'achat saisi directement.
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- LIGNE 2 bis : type technique + coût BOM (Autres charges supprimé) -->
                    <div class="form-row form-row-2">
                        <div class="form-group">
                            <label class="form-label">Type technique</label>
                            <div class="radio-group-horizontal">
                                <label class="radio-label">
                                    <input type="radio" name="TypeTechnique" value="0"
                                           @((int)Model.NouveauProduit.TypeTechnique == 0 ? "checked" : "") />
                                    <span>Matière première</span>
                                </label>
                                <label class="radio-label">
                                    <input type="radio" name="TypeTechnique" value="1"
                                           @((int)Model.NouveauProduit.TypeTechnique == 1 ? "checked" : "") />
                                    <span>Produit semi-fini</span>
                                </label>
                                <label class="radio-label">
                                    <input type="radio" name="TypeTechnique" value="2"
                                           @((int)Model.NouveauProduit.TypeTechnique == 2 ? "checked" : "") />
                                    <span>Produit fini</span>
                                </label>
                                <label class="radio-label">
                                    <input type="radio" name="TypeTechnique" value="3"
                                           @((int)Model.NouveauProduit.TypeTechnique == 3 ? "checked" : "") />
                                    <span>Semi-fini et fini</span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Coût BOM (lecture seule)</label>
                            <div class="input-group">
                                <input id="CoutBom" name="CoutBom" type="number" step="0.01" min="0"
                                       class="form-input form-input-number"
                                       value="@(Model.NouveauProduit.CoutBom)"
                                       placeholder="0,00" readonly />
                                <span class="input-suffix">DA</span>
                            </div>
                        </div>
                    </div>

                    <!-- LIGNE 2 ter : coût total (EDITABLE) + flags -->
                    <div class="form-row form-row-3">
                        <div class="form-group">
                            <label class="form-label">Coût total</label>
                            <div class="input-group">
                                <input id="CoutTotal" name="CoutTotal" type="number" step="0.01" min="0"
                                       class="form-input form-input-number"
                                       value="@(Model.NouveauProduit.CoutTotal)"
                                       placeholder="0,00" />
                                <span class="input-suffix">DA</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Disponible à la vente</label>
                            <label class="checkbox-inline">
                                <input type="checkbox" name="IsSaleable"
                                       @(Model.NouveauProduit.DisponibleVente ? "checked" : "") />
                                <span>Oui</span>
                            </label>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Suivre l'inventaire</label>
                            <label class="checkbox-inline">
                                <input type="checkbox" name="TrackInventory"
                                       @(Model.NouveauProduit.SuiviInventaire ? "checked" : "") />
                                <span>Par quantité</span>
                            </label>
                        </div>
                    </div>

                    <!-- LIGNE 3 : image + quantité + notes -->
                    <div class="form-row form-row-3">
                        <div class="form-group">
                            <label for="ProductImage" class="form-label">Image du produit</label>

                            <input id="ProductImage" name="ProductImage" type="file" accept="image/*"
                                   class="file-input-hidden" style="display:none;" />

                            <label for="ProductImage" class="file-input-button-mini">
                                <svg style="width: 12px; height: 12px; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                    <polyline points="17 8 12 3 7 8"></polyline>
                                    <line x1="12" y1="3" x2="12" y2="15"></line>
                                </svg>
                                <span>Choisir</span>
                            </label>

                            <span id="file-name-display" class="file-name-display"></span>

                            <div id="product-image-preview-wrapper"
                                 style="margin-top:10px; display:flex; align-items:center; gap:10px;">
                                @{
                                    var hasExistingImage = !string.IsNullOrWhiteSpace(Model.NouveauProduit?.Image);
                                    var existingImageUrl = hasExistingImage ? Url.Content("~/images/produits/" + Model.NouveauProduit.Image) : "";
                                }

                                <div id="product-image-preview-container"
                                     style="@(hasExistingImage ? "display:flex;" : "display:none;") width:80px; height:80px; border-radius:18px; overflow:hidden; border:1px solid var(--border-soft); background:#020617; cursor:pointer; align-items:center; justify-content:center; box-shadow:0 10px 30px rgba(15,23,42,0.8);"
                                     onclick="openImageModalFromPreview()">
                                    <img id="product-image-preview"
                                         src="@(hasExistingImage? existingImageUrl : "")"
                                         alt="Image produit"
                                         style="max-width:100%; max-height:100%; object-fit:cover;" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="AvailableQuantity" class="form-label">Quantité disponible</label>
                            <div class="input-group">
                                <input id="AvailableQuantity" name="AvailableQuantity"
                                       type="number" step="0.01" min="0"
                                       class="form-input form-input-number"
                                       value="@(Model.NouveauProduit.QuantiteDisponible)"
                                       placeholder="0,00" />
                            </div>
                        </div>
                        <div class="form-group form-row-span-2">
                            <label for="Comment" class="form-label">Notes internes</label>
                            <textarea id="Comment" name="Comment" class="form-input form-textarea"
                                      placeholder="Cette note est pour usage interne seulement." rows="4">@Model.NouveauProduit.Notes</textarea>
                        </div>
                    </div>

                    <div class="form-footer">
                        <button type="submit" class="btn-primary">Enregistrer</button>
                        @if (Model.ReturnToBom)
                        {
                            <a asp-page="/BOMCreate"
                               class="btn-secondary btn-cancel">
                                Annuler
                            </a>
                        }
                        else
                        {
                            <a asp-page="/ProduitCreate" class="btn-secondary btn-cancel">
                                Annuler
                            </a>
                        }
                    </div>
                </form>
            </div>
        </section>
    </main>
</div>

<!-- POPUP DÉCONNEXION -->
<div id="logout-overlay" class="logout-overlay" style="display:none;">
    <div class="logout-modal">
        <h3>Confirmer la déconnexion</h3>
        <p>Voulez-vous vraiment vous déconnecter et revenir à l'écran de choix du profil ?</p>
        <form method="post" asp-page-handler="Logout" class="logout-modal-actions">
            <button type="button" class="btn-secondary" onclick="closeLogoutModal()">Non, rester</button>
            <button type="submit" class="btn-primary">Oui, se déconnecter</button>
        </form>
    </div>
</div>

<!-- MODAL APERÇU GRANDE IMAGE -->
<div id="image-modal-overlay" class="logout-overlay" style="display:none; background:rgba(3,6,23,0.8);">
    <div class="logout-modal" style="max-width:520px; width:90%; padding:12px 12px 16px 12px;">
        <h3 style="margin-bottom:10px;">Image du produit</h3>
        <div style="border-radius:16px; overflow:hidden; border:1px solid var(--border-soft); background:#020617; max-height:70vh; display:flex; align-items:center; justify-content:center;">
            <img id="image-modal-img"
                 src=""
                 alt="Image produit"
                 style="max-width:100%; max-height:70vh; object-fit:contain;" />
        </div>
        <div class="logout-modal-actions" style="margin-top:12px;">
            <button type="button" class="btn-primary" onclick="closeImageModal()">Fermer</button>
        </div>
    </div>
</div>

<script src="~/js/Home.js"></script>
<script>
    const inputImage = document.getElementById('ProductImage');
    const fileNameDisplay = document.getElementById('file-name-display');
    const previewContainer = document.getElementById('product-image-preview-container');
    const previewImg = document.getElementById('product-image-preview');
    const imageModalOverlay = document.getElementById('image-modal-overlay');
    const imageModalImg = document.getElementById('image-modal-img');

    const salePriceInput = document.getElementById('SalePrice');
    const salePriceLabel = document.getElementById('SalePriceLabel');
    const salePriceForbiddenTooltip = document.getElementById('SalePriceForbiddenTooltip');
    const salePriceInfoTooltip = document.getElementById('SalePriceInfoTooltip');

    if (inputImage) {
        inputImage.addEventListener('change', function (e) {
            const file = e.target.files[0];
            const fileName = file?.name || '';
            if (fileNameDisplay) fileNameDisplay.textContent = fileName;

            if (file) {
                const reader = new FileReader();
                reader.onload = function (ev) {
                    if (previewImg && previewContainer) {
                        previewImg.src = ev.target.result;
                        previewContainer.style.display = 'flex';
                    }
                };
                reader.readAsDataURL(file);
            }
        });
    }

    function openImageModalFromPreview() {
        if (!previewImg || !previewImg.src) return;
        imageModalImg.src = previewImg.src;
        imageModalOverlay.style.display = 'flex';
    }

    function closeImageModal() {
        imageModalOverlay.style.display = 'none';
    }

    function openLogoutModal() {
        document.getElementById('logout-overlay').style.display = 'flex';
        document.body.classList.add('logout-blur-active');
    }
    function closeLogoutModal() {
        document.getElementById('logout-overlay').style.display = 'none';
        document.body.classList.remove('logout-blur-active');
    }

    document.addEventListener('DOMContentLoaded', function () {
        const successToast = document.getElementById('product-success-toast');
        const errorToast = document.getElementById('product-error-toast');

        if (successToast) {
            requestAnimationFrame(() => successToast.classList.add('visible'));
            setTimeout(() => successToast.classList.remove('visible'), 3000);
        }
        if (errorToast) {
            requestAnimationFrame(() => errorToast.classList.add('visible'));
            setTimeout(() => errorToast.classList.remove('visible'), 4000);
        }

        applyCostStateFromType();
        wireTypeTechniqueChange();
        wireMPCostSync(); // synchronisation coûts MP
    });

    document.addEventListener('click', function (e) {
        if (e.target === imageModalOverlay) {
            closeImageModal();
        }
    });

    function wireTypeTechniqueChange() {
        const radios = document.querySelectorAll('input[name="TypeTechnique"]');
        radios.forEach(r => {
            r.addEventListener('change', applyCostStateFromType);
        });
    }

    function applyCostStateFromType() {
        const selected = document.querySelector('input[name="TypeTechnique"]:checked');
        const costInput = document.getElementById('Cost');
        const costLabel = document.getElementById('CostLabel');
        const tooltip = document.getElementById('CostNoneOverlay');

        if (!selected || !costInput || !costLabel || !tooltip) return;

        const typeValue = selected.value;

        // Gestion coût d'achat MP vs SF/Finis
        if (typeValue === "0") {
            costInput.disabled = false;
            costInput.classList.remove('cost-input-disabled');
            costLabel.classList.remove('cost-disabled-label');

            if (costInput.value === "none") {
                costInput.value = "0";
            }

            tooltip.style.display = 'none';
        } else {
            costInput.disabled = true;
            costInput.classList.add('cost-input-disabled');
            costLabel.classList.add('cost-disabled-label');

            costInput.value = "none";
            tooltip.style.display = 'flex';
        }

        // Gestion prix de vente selon le type technique
        if (!salePriceInput || !salePriceLabel || !salePriceForbiddenTooltip || !salePriceInfoTooltip) {
            return;
        }

        // Reset
        salePriceInput.disabled = false;
        salePriceInput.classList.remove('cost-input-disabled');
        salePriceLabel.classList.remove('cost-disabled-label');
        salePriceForbiddenTooltip.style.display = 'none';
        salePriceInfoTooltip.style.display = 'none';

        // MP -> prix de vente interdit + tooltip
        if (typeValue === "0") {
            salePriceInput.disabled = true;
            salePriceInput.classList.add('cost-input-disabled');
            salePriceLabel.classList.add('cost-disabled-label');
            salePriceInput.value = "0";
            salePriceForbiddenTooltip.style.display = 'flex';
        }
        // Produit semi-fini uniquement -> prix de vente interdit + tooltip
        else if (typeValue === "1") {
            salePriceInput.disabled = true;
            salePriceInput.classList.add('cost-input-disabled');
            salePriceLabel.classList.add('cost-disabled-label');
            salePriceInput.value = "0";
            salePriceForbiddenTooltip.style.display = 'flex';
        }
        // Semi-fini + fini -> prix de vente autorisé mais message informatif
        else if (typeValue === "3") {
            salePriceInput.disabled = false;
            salePriceInput.classList.remove('cost-input-disabled');
            salePriceLabel.classList.remove('cost-disabled-label');
            salePriceInfoTooltip.style.display = 'flex';
        }
        // Produit fini uniquement (2) -> champ normal, aucun tooltip
    }

    // Synchronisation des coûts pour matière première
    function wireMPCostSync() {
        const costInput = document.getElementById('Cost');
        const bomInput = document.getElementById('CoutBom');
        const totalInput = document.getElementById('CoutTotal');

        if (!costInput || !bomInput || !totalInput) return;

        // Quand on modifie le coût d'achat
        costInput.addEventListener('input', function() {
            const selected = document.querySelector('input[name="TypeTechnique"]:checked');
            if (selected && selected.value === "0") {
                const value = costInput.value || "0";
                bomInput.value = value;
                totalInput.value = value;
            }
        });

        // Quand on modifie le coût total
        totalInput.addEventListener('input', function() {
            const selected = document.querySelector('input[name="TypeTechnique"]:checked');
            if (selected && selected.value === "0") {
                const value = totalInput.value || "0";
                costInput.value = value;
                bomInput.value = value;
            }
        });
    }
</script>

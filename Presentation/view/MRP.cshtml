    <!-- CONTENU PRINCIPAL -->
    <main class="erp-main">
        <!-- HEADER GLOBAL -->
        <header class="erp-header">
            <div class="header-left">
                <h1>Module MRP</h1>
                <p>Planification des besoins matières (MRP).</p>
            </div>

            <div class="header-right">
                <div class="header-db">
                    <span class="header-db-label">Base active</span>
                    <span class="header-db-name">erp_db</span>
                </div>

                <!-- Bouton Config MRP -->

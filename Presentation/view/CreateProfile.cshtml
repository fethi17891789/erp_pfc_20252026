@page
@model erp_pfc_20252026.Pages.CreateProfileModel

@{
    ViewData["Title"] = "Créer un profil ERP";
}

<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="~/css/Common.css" />

<div class="container">
    <div class="header">
        <h1>Créer un nouveau profil</h1>
        <p>Configurez votre compte administrateur ERP.</p>
    </div>

    <form method="post" enctype="multipart/form-data" class="form-section">
        <div class="form-group">
            <label asp-for="LogoFile">Logo de l'entreprise</label>
            <input type="file" asp-for="LogoFile" class="input" accept="image/*" />
            <span asp-validation-for="LogoFile" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="email" asp-for="Email" class="input" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input type="text" asp-for="Login" class="input" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Mot de passe</label>
            <input type="password" asp-for="Password" class="input" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!-- Poste occupé -->
        <div class="form-group">
            <label>Poste occupé</label>

            @if (Model.IsFirstUser)
            {
                <!-- Premier utilisateur : PDG forcé, champ grisé non interactif -->
                <div class="locked-field">
                    <input type="text"
                           class="input input-locked"
                           value="PDG"
                           readonly
                           tabindex="-1" />
                    <span class="locked-badge">PDG (verrouillé)</span>
                    <input type="hidden" asp-for="SelectedPoste" value="PDG" />
                </div>
            }
            else
            {
                <!-- Autres utilisateurs : champ combiné (saisie + menu déroulant filtrable) -->
                <div class="job-input-wrapper">
                    <input type="text"
                           id="job-input"
                           class="job-input"
                           placeholder="Saisir ou rechercher un poste (ex : Responsable MRP, RH, Stagiaire...)"
                           autocomplete="off" />

                    <span class="job-input-icon">▼</span>

                    <div id="job-dropdown" class="job-dropdown">
                        <!-- Options injectées par CreateProfile.js -->
                    </div>

                    <!-- Champ caché lié à SelectedPoste pour le POST -->
                    <input type="hidden" asp-for="SelectedPoste" id="SelectedPoste" />
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Créer le profil</button>

        @if (!string.IsNullOrEmpty(Model.ResultMessage))
        {
            <div class="alert-box" style="margin-top:15px;">
                @Model.ResultMessage
            </div>
        }
    </form>

    <div class="footer">
        Étape 2 • Création du profil administrateur
    </div>
</div>

<script src="~/js/CreateProfile.js"></script>

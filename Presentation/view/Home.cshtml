@page
@model erp_pfc_20252026.Pages.HomeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Tableau de bord ERP";
}

<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="~/css/Home.css" />

<div class="erp-shell">
    <!-- BARRE LATERALE GAUCHE -->
    <aside class="erp-sidebar">
        <div class="erp-logo">
            <span class="erp-logo-mark">E</span>
            <span class="erp-logo-text">ERP Suite</span>
        </div>

        <nav class="erp-nav">
            <button class="nav-item nav-item-active" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                <span>Accueil</span>
            </button>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 9h12M6 12h12M6 15h12M3 3h18a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z"></path>
                </svg>
                <span>Modules</span>
            </button>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <span>Profils</span>
            </button>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
                <span>Bases ERP</span>
            </button>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="1"></circle>
                    <path d="M12 1v6m6.07 6.07h-6.14M12 19v4m6.07-6.07v0"></path>
                    <path d="M19 5l-4.24 4.24M5 19l4.24-4.24"></path>
                    <path d="M19 19l-4.24-4.24M5 5l4.24 4.24"></path>
                </svg>
                <span>Paramètres</span>
            </button>
        </nav>

        <div class="erp-sidebar-footer">
            <button class="sidebar-quick" type="button">
                <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Nouveau profil
            </button>
            <button class="sidebar-quick secondary" type="button" onclick="openLogoutModal()">
                <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                    <polyline points="16 3 16 10 13 7"></polyline>
                    <path d="M16 10v7a2 2 0 0 1-2 2h-2"></path>
                </svg>
                Déconnexion
            </button>
        </div>
    </aside>

    <!-- CONTENU PRINCIPAL -->
    <main class="erp-main">
        <!-- HEADER GLOBAL -->
        <header class="erp-header">
            <div class="header-left">
                <h1>Tableau de bord ERP</h1>
                <p>Accédez à vos modules, profils et configuration.</p>
            </div>

            <div class="header-right">
                <div class="header-db">
                    <span class="header-db-label">Base active</span>
                    <span class="header-db-name">erp_db</span>
                </div>
                <button class="header-btn" type="button">
                    <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 4v6h6"></path>
                        <path d="M23 20v-6h-6"></path>
                        <path d="M20.49 9A9 9 0 0 0 5.64 5.64"></path>
                        <path d="M3.51 15A9 9 0 0 0 18.36 18.36"></path>
                    </svg>
                    Changer de base
                </button>
                <button class="header-profile-btn" type="button">
                    <div class="header-avatar">P</div>
                </button>
            </div>
        </header>

        <!-- BANDEAU KPI -->
        <section class="kpi-row">
            <div class="kpi-card">
                <span class="kpi-label">Profils actifs</span>
                <span class="kpi-value">1</span>
            </div>
            <div class="kpi-card">
                <span class="kpi-label">Modules disponibles</span>
                <span class="kpi-value">10</span>
            </div>
            <div class="kpi-card">
                <span class="kpi-label">Base de données</span>
                <span class="kpi-value kpi-ok">Active</span>
            </div>
        </section>

        <!-- BLOC PRINCIPAL : MODULES -->
        <section class="erp-content">
            <div class="section-header">
                <h2>Modules ERP</h2>
                <button class="section-link" type="button">Voir tous</button>
            </div>

            <div class="modules-grid">
                <!-- Ventes -->
                <article class="module-tile">
                    <div class="module-tile-header">
                        <div class="module-circle">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M9 2l3-2h6l3 2H22v2H2V2z"></path>
                                <path d="M3 4h18v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4z"></path>
                                <circle cx="12" cy="13" r="2"></circle>
                            </svg>
                        </div>
                        <span class="module-badge">Ventes</span>
                    </div>
                    <h3>Gestion commerciale</h3>
                    <p>Devis, commandes et facturation clients.</p>
                    <div class="module-tile-footer">
                        <span class="module-status-dot"></span>
                        <span class="module-status-text">À venir</span>
                        <button class="module-action" type="button">Ouvrir</button>
                    </div>
                </article>

                <!-- Achats -->
                <article class="module-tile">
                    <div class="module-tile-header">
                        <div class="module-circle">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="9" cy="21" r="1"></circle>
                                <circle cx="20" cy="21" r="1"></circle>
                                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                            </svg>
                        </div>
                        <span class="module-badge">Achats</span>
                    </div>
                    <h3>Approvisionnement</h3>
                    <p>Commandes fournisseurs et réceptions.</p>
                    <div class="module-tile-footer">
                        <span class="module-status-dot"></span>
                        <span class="module-status-text">À venir</span>
                        <button class="module-action" type="button">Ouvrir</button>
                    </div>
                </article>

                <!-- Stock -->
                <article class="module-tile">
                    <div class="module-tile-header">
                        <div class="module-circle">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="7" height="7"></rect>
                                <rect x="14" y="3" width="7" height="7"></rect>
                                <rect x="14" y="14" width="7" height="7"></rect>
                                <rect x="3" y="14" width="7" height="7"></rect>
                            </svg>
                        </div>
                        <span class="module-badge">Stock</span>
                    </div>
                    <h3>Gestion d'inventaire</h3>
                    <p>Magasins, mouvements et niveaux.</p>
                    <div class="module-tile-footer">
                        <span class="module-status-dot"></span>
                        <span class="module-status-text">À venir</span>
                        <button class="module-action" type="button">Ouvrir</button>
                    </div>
                </article>

                <!-- Production (MRP) -->
                <article class="module-tile">
                    <div class="module-tile-header">
                        <div class="module-circle">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M2 6l10-4 10 4M2 6v12l10 4 10-4V6M2 6l10 4 10-4"></path>
                                <polyline points="12 10 12 20"></polyline>
                            </svg>
                        </div>
                        <span class="module-badge">Production</span>
                    </div>
                    <h3>Fabrication (MRP)</h3>
                    <p>Ordres de fabrication et planification.</p>
                    <div class="module-tile-footer">
                        <span class="module-status-dot"></span>
                        <span class="module-status-text">Actif</span>
                        <a asp-page="/Fabrication" class="module-action-link">
                            <button class="module-action" type="button">Ouvrir</button>
                        </a>
                    </div>
                </article>

                <!-- Projets -->
                <article class="module-tile">
                    <div class="module-tile-header">
                        <div class="module-circle">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 7v10a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V7"></path>
                                <path d="M17 3H7a4 4 0 0 0-4 4v6"></path>
                                <line x1="6" y1="11" x2="18" y2="11"></line>
                            </svg>
                        </div>
                        <span class="module-badge">Projets</span>
                    </div>
                    <h3>Gestion de projet</h3>
                    <p>Tâches, jalons et planning détaillé.</p>
                    <div class="module-tile-footer">
                        <span class="module-status-dot"></span>
                        <span class="module-status-text">À venir</span>
                        <button class="module-action" type="button">Ouvrir</button>
                    </div>
                </article>

                <!-- RH -->
                <article class="module-tile">
                    <div class="module-tile-header">
                        <div class="module-circle">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                            </svg>
                        </div>
                        <span class="module-badge">RH</span>
                    </div>
                    <h3>Ressources humaines</h3>
                    <p>Employés, congés et compétences.</p>
                    <div class="module-tile-footer">
                        <span class="module-status-dot"></span>
                        <span class="module-status-text">À venir</span>
                        <button class="module-action" type="button">Ouvrir</button>
                    </div>
                </article>

                <!-- Comptabilité -->
                <article class="module-tile">
                    <div class="module-tile-header">
                        <div class="module-circle">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="12" y1="2" x2="12" y2="22"></line>
                                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                            </svg>
                        </div>
                        <span class="module-badge">Comptabilité</span>
                    </div>
                    <h3>Gestion financière</h3>
                    <p>Écritures, états et TVA.</p>
                    <div class="module-tile-footer">
                        <span class="module-status-dot"></span>
                        <span class="module-status-text">À venir</span>
                        <button class="module-action" type="button">Ouvrir</button>
                    </div>
                </article>

                <!-- Tableaux de bord -->
                <article class="module-tile">
                    <div class="module-tile-header">
                        <div class="module-circle">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="12 3 20 7.5 20 16.5 12 21 4 16.5 4 7.5 12 3"></polyline>
                                <polyline points="12 12 20 7.5"></polyline>
                                <polyline points="12 12 12 21"></polyline>
                                <polyline points="12 12 4 7.5"></polyline>
                            </svg>
                        </div>
                        <span class="module-badge">Reporting</span>
                    </div>
                    <h3>Tableaux de bord</h3>
                    <p>KPIs, graphiques et synthèses.</p>
                    <div class="module-tile-footer">
                        <span class="module-status-dot"></span>
                        <span class="module-status-text">À venir</span>
                        <button class="module-action" type="button">Ouvrir</button>
                    </div>
                </article>

                <!-- Rapports -->
                <article class="module-tile">
                    <div class="module-tile-header">
                        <div class="module-circle">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h12l4 4v12H4z"></path>
                                <path d="M16 4v4h4"></path>
                                <line x1="8" y1="12" x2="16" y2="12"></line>
                                <line x1="8" y1="16" x2="14" y2="16"></line>
                            </svg>
                        </div>
                        <span class="module-badge">Rapports</span>
                    </div>
                    <h3>Modèles de rapports</h3>
                    <p>Créer, structurer et archiver des rapports standards.</p>
                    <div class="module-tile-footer">
                        <span class="module-status-dot"></span>
                        <span class="module-status-text">Actif</span>
                        <button class="module-action" type="button">Ouvrir</button>
                    </div>
                </article>

                <!-- Paramètres -->
                <article class="module-tile">
                    <div class="module-tile-header">
                        <div class="module-circle">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="3"></circle>
                                <path d="M12 1v6m6 0h6m0 6v6m-6 6h6m-10-6v6m0-10h-6m0 10v6"></path>
                                <path d="M4.22 4.22l4.24 4.24m0 7.08l-4.24 4.24M19.78 4.22l-4.24 4.24m0 7.08l4.24 4.24"></path>
                            </svg>
                        </div>
                        <span class="module-badge">Configuration</span>
                    </div>
                    <h3>Paramètres système</h3>
                    <p>Sécurité, utilisateurs et bases.</p>
                    <div class="module-tile-footer">
                        <span class="module-status-dot"></span>
                        <span class="module-status-text">À venir</span>
                        <button class="module-action" type="button">Ouvrir</button>
                    </div>
                </article>
            </div>
        </section>
    </main>
</div>

<!-- POPUP DE DÉCONNEXION -->
<div id="logout-overlay" class="logout-overlay" style="display:none;">
    <div class="logout-modal">
        <h3>Confirmer la déconnexion</h3>
        <p>Voulez-vous vraiment vous déconnecter et revenir à l'écran de choix du profil&nbsp;?</p>

        <form method="post" asp-page-handler="Logout" class="logout-modal-actions">
            <button type="button" class="btn-secondary" onclick="closeLogoutModal()">Non, rester</button>
            <button type="submit" class="btn-primary">Oui, se déconnecter</button>
        </form>
    </div>
</div>

<script src="~/js/Home.js"></script>

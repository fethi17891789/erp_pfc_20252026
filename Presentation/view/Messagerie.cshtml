@page
@model erp_pfc_20252026.Pages.MessagerieModel
@{
    ViewData["Title"] = "Messagerie";
}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/css/Common.css">
<link rel="stylesheet" href="/css/Home.css">

<div class="erp-shell">
    <!-- BARRE LATÉRALE GAUCHE (identique) -->
    <aside class="erp-sidebar">
        <div class="erp-logo">
            <span class="erp-logo-mark">E</span>
            <span class="erp-logo-text">ERP Suite</span>
        </div>
        <nav class="erp-nav">
            <a asp-page="/Home" class="nav-item">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z" />
                    <polyline points="9 22 9 12 15 12 15 22" />
                </svg>
                <span>Accueil</span>
            </a>
            <a asp-page="/Fabrication" class="nav-item">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 9h12M6 12h12M6 15h12M3 3h18a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2z" />
                </svg>
                <span>Modules</span>
            </a>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                    <circle cx="12" cy="7" r="4" />
                </svg>
                <span>Profils</span>
            </button>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="7" height="7" />
                    <rect x="14" y="3" width="7" height="7" />
                    <rect x="14" y="14" width="7" height="7" />
                    <rect x="3" y="14" width="7" height="7" />
                </svg>
                <span>Bases ERP</span>
            </button>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="1" />
                    <path d="M12 1v6m6.07 6.07h-6.14M12 19v4m6.07-6.07v0" />
                    <path d="M19 5l-4.24 4.24M5 19l4.24-4.24" />
                    <path d="M19 19l-4.24-4.24M5 5l4.24 4.24" />
                </svg>
                <span>Paramètres</span>
            </button>
        </nav>
        <div class="erp-sidebar-footer">
            <button class="sidebar-quick" type="button">
                <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="15" x2="12" y2="21" />
                    <line x1="15" y1="11" x2="21" y2="12" />
                </svg>
                Nouveau profil
            </button>
            <button class="sidebar-quick secondary" type="button" onclick="openLogoutModal()">
                <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                    <polyline points="16 3 16 10 13 7" />
                    <path d="M16 10v7a2 2 0 0 1-2 2h-2" />
                </svg>
                Déconnexion
            </button>
        </div>
    </aside>

    <!-- CONTENU PRINCIPAL -->
    <main class="erp-main">
        <!-- HEADER GLOBAL -->
        <header class="erp-header">
            <div class="header-left">
                <h1>Messagerie</h1>
                <p>Discutez avec vos utilisateurs internes.</p>
            </div>
            <div class="header-right">
                <div class="header-db">
                    <span class="header-db-label">Base active</span>
                    <span class="header-db-name">erp_db</span>
                </div>
                <button class="header-btn" type="button">
                    <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 4v6h6" />
                        <path d="M23 20v-6h-6" />
                        <path d="M20.49 9A9 9 0 0 0 5.64 5.64" />
                        <path d="M3.51 15A9 9 0 0 0 18.36 18.36" />
                    </svg>
                    Changer de base
                </button>
                <button class="header-profile-btn" type="button">
                    <div class="header-avatar">P</div>
                </button>
            </div>
        </header>

        <!-- CONTENU MESSAGERIE -->
        <section class="erp-content">
            <!-- Bandeau info -->
            <div class="alert-box">
                @if (Model.Utilisateurs == null || !Model.Utilisateurs.Any())
                {
                    <text>Aucun utilisateur trouvé dans ErpUsers. Créez au moins un autre profil pour démarrer la messagerie.</text>
                }
                else
                {
                    <text>@Model.Utilisateurs.Count utilisateur(s) trouvé(s). Cliquez sur un utilisateur puis envoyez un message.</text>
                }
            </div>

            <div class="chat-layout" style="display:grid; grid-template-columns:280px 1fr; gap:16px; min-height:0; height:70vh;">
                <!-- COLONNE GAUCHE : recherche + liste utilisateurs -->
                <aside class="chat-sidebar" style="display:flex; flex-direction:column; gap:12px; padding:12px; border-radius:16px; background:rgba(4,6,20,0.9); border:1px solid rgba(255,255,255,0.06);">
                    <div>
                        <label class="chat-label" style="font-size:0.75rem; font-weight:600; text-transform:uppercase; color:var(--text-muted); margin-bottom:6px; display:block;">
                            Rechercher un utilisateur
                        </label>
                        <div class="chat-search-wrapper" style="position:relative;">
                            <input type="text"
                                   id="userSearchInput"
                                   onkeyup="filterUsers(this.value)"
                                   placeholder="Login, email ou poste..."
                                   style="width:100%; height:var(--input-height); padding:0 32px 0 12px; border-radius:var(--radius-sm); border:1px solid var(--border); background:linear-gradient(135deg, rgba(8,11,32,0.98), rgba(18,22,54,0.98)); color:var(--text); font-size:0.85rem;" />
                            <span style="position:absolute; right:8px; top:50%; transform:translateY(-50%); color:var(--text-muted-2);">
                                🔍
                            </span>
                        </div>
                    </div>

                    <div style="border-top:1px solid rgba(255,255,255,0.06); padding-top:10px; display:flex; flex-direction:column; gap:6px; flex:1; min-height:0;">
                        <div style="display:flex; justify-content:space-between; align-items:center;">
                            <h2 style="font-size:0.9rem;">Utilisateurs</h2>
                            <span style="font-size:0.7rem; padding:2px 8px; border-radius:999px; border:1px solid rgba(255,255,255,0.14); color:var(--text-muted);">
                                @Model.Utilisateurs.Count
                            </span>
                        </div>

                        <div id="usersContainer" style="max-height:260px; overflow-y:auto; opacity:0.95; display:flex; flex-direction:column; gap:4px;">
                            @if (Model.Utilisateurs != null && Model.Utilisateurs.Any())
                            {
                                foreach (var u in Model.Utilisateurs)
                                {
                                    var displayName = string.IsNullOrWhiteSpace(u.Login)
                                    ? (string.IsNullOrWhiteSpace(u.Email) ? "Utilisateur" : u.Email)
                                    : u.Login;

                                    var initial = !string.IsNullOrWhiteSpace(displayName)
                                    ? char.ToUpper(displayName[0]).ToString()
                                    : "U";

                                    var statusText = u.IsOnline ? "En ligne" : "Hors ligne";
                                    var statusClass = u.IsOnline ? "online" : "offline";

                                    <button type="button"
                                            class="user-item"
                                            data-user-id="@u.Id"
                                            data-login="@u.Login"
                                            data-email="@u.Email"
                                            data-poste="@u.Poste"
                                            data-isonline="@u.IsOnline"
                                            style="width:100%; text-align:left; border:none; background:transparent; padding:6px 8px; border-radius:10px; display:flex; gap:8px; align-items:center; cursor:pointer;">
                                        <div style="width:28px; height:28px; border-radius:999px; background:linear-gradient(135deg, var(--accent), var(--accent-hover)); display:flex; align-items:center; justify-content:center; font-size:0.8rem; font-weight:700;">
                                            @initial
                                        </div>
                                        <div style="flex:1; min-width:0;">
                                            <div style="display:flex; align-items:center; gap:6px;">
                                                <div style="font-size:0.85rem; font-weight:600; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                                                    @displayName
                                                </div>
                                                <span class="chat-user-status @statusClass">
                                                </span>
                                            </div>
                                            <div style="font-size:0.75rem; color:var(--text-muted-2); white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                                                @u.Email (@u.Poste)
                                            </div>
                                            <div class="chat-user-status-text @statusClass">
                                                @statusText
                                            </div>
                                        </div>
                                    </button>
                                }
                            }
                            else
                            {
                                <div style="font-size:0.8rem; color:var(--text-muted-2); padding:8px 4px;">
                                    Aucun autre utilisateur pour le moment. Créez un nouveau profil pour démarrer la messagerie.
                                </div>
                            }
                        </div>
                    </div>
                </aside>

                <!-- COLONNE DROITE : conversation -->
                <section class="chat-main" style="display:flex; flex-direction:column; border-radius:16px; background:rgba(4,6,20,0.92); border:1px solid rgba(255,255,255,0.08); padding:8px 8px 6px; min-width:0;">
                    <header style="display:flex; justify-content:space-between; align-items:center; padding:4px 6px 8px; border-bottom:1px solid rgba(255,255,255,0.06);">
                        <div style="display:flex; align-items:center; gap:8px;">
                            <div style="width:32px; height:32px; border-radius:999px; background:linear-gradient(135deg, var(--accent), var(--accent-hover)); display:flex; align-items:center; justify-content:center; font-size:0.9rem; font-weight:700;" id="chatTargetInitial">
                                ?
                            </div>
                            <div>
                                <div style="font-size:0.9rem; font-weight:600;" id="chatTargetName">Aucun destinataire</div>
                                <div style="display:flex; align-items:center; gap:6px; font-size:0.75rem; color:var(--text-muted-2);" id="chatHeaderSubtitle">
                                    <span id="chatHeaderStatusDot" class="chat-header-status-dot offline"></span>
                                    <span id="chatHeaderStatusText">Sélectionnez un utilisateur à gauche pour démarrer une conversation.</span>
                                </div>
                            </div>
                        </div>
                        <div>
                            <span style="font-size:0.7rem; padding:4px 10px; border-radius:999px; border:1px solid rgba(255,255,255,0.16); color:var(--text-muted);">
                                Chat en temps réel
                            </span>
                        </div>
                    </header>

                    <!-- ZONE MESSAGES -->
                    <div id="messagesContainer" style="flex:1; padding:8px 6px 6px; overflow-y:auto; display:flex; flex-direction:column; gap:8px; font-size:0.85rem;">
                        <!-- Les messages seront injectés ici par JS -->
                    </div>

                    <!-- INPUT MESSAGE -->
                    <footer style="display:grid; grid-template-columns:auto auto 1fr auto; align-items:center; gap:8px; padding:6px 8px 4px; border-top:1px solid rgba(255,255,255,0.08);">
                        <div>
                            <!-- Bouton trombone moderne (remplace 📎) -->
                            <button type="button"
                                    id="btnAttachFile"
                                    style="border:none; background:transparent; color:var(--text-muted-2); font-size:1.4rem; cursor:pointer; transition:transform 0.15s ease, color 0.15s ease; padding:6px; display:flex; align-items:center; justify-content:center; width:32px; height:32px;"
                                    title="Envoyer un fichier"
                                    onclick="console.log('CLICK HTML btnAttachFile'); this.style.transform='scale(1.1)'; setTimeout(() => this.style.transform='scale(1)', 150);">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="width:18px; height:18px;">
                                    <path d="M21.44 11.05l-8.19 8.19a6 6 0 0 1-8.49-8.49l8.19-8.19a4 4 0 0 1 5.66 5.66l-8.19 8.19a2 2 0 0 1-2.83-2.83l8.19-8.19a4 4 0 0 1 5.66 0 4 4 0 0 1 0 5.66z" />
                                </svg>
                            </button>
                            <!-- input fichier caché -->
                            <input type="file"
                                   id="chatFileInput"
                                   name="chatFile"
                                   multiple
                                   style="display:none;" />
                        </div>

                        <!-- Bouton micro moderne (remplace 🎤) -->
                        <div>
                            <button type="button"
                                    id="btnRecordAudio"
                                    style="border:none; background:transparent; color:var(--text-muted-2); font-size:1.1rem; padding:6px; display:flex; align-items:center; justify-content:center; width:32px; height:32px; border-radius:50%; transition: all 0.2s ease;"
                                    title="Enregistrer un message vocal">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="width:18px; height:18px;">
                                    <path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z" />
                                    <path d="M19 10v2a7 7 0 0 1-14 0v-2" />
                                    <line x1="12" y1="19" x2="12" y2="23" />
                                    <line x1="8" y1="23" x2="16" y2="23" />
                                </svg>
                            </button>
                        </div>

                        <div>
                            <input type="text"
                                   id="chatInput"
                                   placeholder="Écrire un message..."
                                   style="width:100%; height:var(--input-height); border-radius:var(--radius-full); border:1px solid var(--border); padding:0 14px; background:rgba(10,14,40,0.95); color:var(--text); font-size:0.85rem;" />
                        </div>
                        <div>
                            <button type="button"
                                    id="btnSend"
                                    style="padding:8px 16px; border-radius:var(--radius-full); border:none; background:linear-gradient(135deg, var(--accent), var(--accent-hover)); color:#fff; font-size:0.8rem; font-weight:600;">
                                Envoyer
                            </button>
                        </div>
                    </footer>
                </section>
            </div>
        </section>
    </main>
</div>

<!-- ID utilisateur courant pour le JS -->
<input type="hidden" id="currentUserId" value="@Model.CurrentUserId" />

<!-- Token antiforgery pour les POST AJAX -->
<input type="hidden" id="__RequestVerificationToken"
       name="__RequestVerificationToken"
       value="@Antiforgery.GetAndStoreTokens(HttpContext).RequestToken" />

<!-- POPUP DÉCONNEXION (réutilisé) -->
<div id="logout-overlay" class="logout-overlay" style="display:none;">
    <div class="logout-modal">
        <h3>Confirmer la déconnexion</h3>
        <p>Voulez-vous vraiment vous déconnecter et revenir à l'écran de choix du profil ?</p>
        <form method="post" asp-page-handler="Logout">
            <div class="logout-modal-actions">
                <button type="button" class="btn-secondary" onclick="closeLogoutModal()">Non, rester</button>
                <button type="submit" class="btn-primary">Oui</button>
            </div>
        </form>
    </div>
</div>

<!-- OVERLAY POUR L'IMAGE EN GRAND -->
<div id="chatImageOverlay" style="
     display:none;
     position:fixed;
     inset:0;
     background:rgba(0,0,0,0.8);
     z-index:1000;
     justify-content:center;
     align-items:center;
     cursor:pointer;">
    <img id="chatImageOverlayImg"
         src=""
         alt="Image"
         style="max-width:90%; max-height:90%; border-radius:12px; box-shadow:0 10px 40px rgba(0,0,0,0.8);" />
</div>

<script src="/js/Home.js"></script>

<!-- Expose l'ID courant au JS -->
<script>
    window.currentUserIdFromServer = parseInt(document.getElementById("currentUserId")?.value || "0");
</script>

<!-- SignalR + script messagerie -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script src="/js/messagerie.js"></script>

<script>
    function filterUsers(searchTerm) {
        const container = document.getElementById('usersContainer');
        if (!container) return;

        const items = container.querySelectorAll('.user-item');
        const term = (searchTerm || '').toLowerCase();

        items.forEach(item => {
            const login = (item.dataset.login || '').toLowerCase();
            const email = (item.dataset.email || '').toLowerCase();
            const poste = (item.dataset.poste || '').toLowerCase();

            if (!term || login.includes(term) || email.includes(term) || poste.includes(term)) {
                item.style.display = '';
            } else {
                item.style.display = 'none';
            }
        });
    }
</script>

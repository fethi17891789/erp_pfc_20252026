@page
@model erp_pfc_20252026.Pages.MRPDetailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Détail planification MRP";
}

<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="~/css/Home.css" />
<link rel="stylesheet" href="~/css/Fabrication.css" />
<link rel="stylesheet" href="~/css/Common.css" />

<div class="erp-shell">
    <!-- BARRE LATERALE GAUCHE -->
    <aside class="erp-sidebar">
        <div class="erp-logo">
            <span class="erp-logo-mark">E</span>
            <span class="erp-logo-text">ERP Suite</span>
        </div>

        <nav class="erp-nav">
            <a asp-page="/Home" class="nav-item">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                <span>Accueil</span>
            </a>
            <a asp-page="/MRP" class="nav-item nav-item-active">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 9h12M6 12h12M6 15h12M3 3h18a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z"></path>
                </svg>
                <span>MRP</span>
            </a>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <span>Profils</span>
            </button>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
                <span>Bases ERP</span>
            </button>
            <button class="nav-item" type="button">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="1"></circle>
                    <path d="M12 1v6m6.07 6.07h-6.14M12 19v4m6.07-6.07v0"></path>
                    <path d="M19 5l-4.24 4.24M5 19l4.24-4.24"></path>
                    <path d="M19 19l-4.24-4.24M5 5l4.24 4.24"></path>
                </svg>
                <span>Paramètres</span>
            </button>
        </nav>

        <div class="erp-sidebar-footer">
            <button class="sidebar-quick" type="button">
                <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Nouveau profil
            </button>
            <button class="sidebar-quick secondary" type="button" onclick="openLogoutModal()">
                <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                    <polyline points="16 3 16 10 13 7"></polyline>
                    <path d="M16 10v7a2 2 0 0 1-2 2h-2"></path>
                </svg>
                Déconnexion
            </button>
        </div>
    </aside>

    <!-- CONTENU PRINCIPAL -->
    <main class="erp-main">
        <!-- HEADER GLOBAL -->
        <header class="erp-header">
            <div class="header-left">
                <h1>Détail planification MRP</h1>
                <p>Visualisation des besoins pour @Model.Planification?.Reference.</p>
            </div>

            <div class="header-right">
                <div class="header-db">
                    <span class="header-db-label">Base active</span>
                    <span class="header-db-name">erp_db</span>
                </div>

                <button class="header-btn" type="button" onclick="window.location.href='@Url.Page("/MRP")'">
                    <svg style="width: 14px; height: 14px; display: inline-block; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="15 18 9 12 15 6"></polyline>
                        <path d="M20 19V5"></path>
                    </svg>
                    Retour aux planifications
                </button>
                <button class="header-profile-btn" type="button">
                    <div class="header-avatar">P</div>
                </button>
            </div>
        </header>

        <section class="erp-content" style="display:flex; flex-direction:column; gap:16px;">
            <!-- BANDEAU D'INFO PLANIF (style verre sombre + accent, pas de gros bleu custom) -->
            <div style="
                    display:flex;
                    align-items:flex-start;
                    justify-content:space-between;
                    padding:14px 16px;
                    border-radius:var(--radius-md);
                    background:linear-gradient(135deg, rgba(8,11,32,0.96), rgba(18,22,54,0.96));
                    border:1px solid var(--glass-border);
                    box-shadow:var(--shadow-lg);
                ">
                <div style="display:flex; flex-direction:column; gap:6px;">
                    <div style="display:flex; align-items:center; gap:10px;">
                        <span style="
                                font-size:0.8rem;
                                font-weight:600;
                                letter-spacing:0.08em;
                                text-transform:uppercase;
                                color:var(--text-muted);
                                padding:3px 8px;
                                border-radius:999px;
                                border:1px solid var(--border-soft);
                            ">
                            Planification MRP
                        </span>
                        <span style="font-size:0.95rem; color:var(--text-muted);">
                            Réf : <strong>@Model.Planification?.Reference</strong>
                        </span>
                    </div>

                    <div style="display:flex; flex-wrap:wrap; gap:12px; font-size:0.9rem; color:var(--text-muted);">
                        <div>
                            Horizon : <strong>@Model.Planification?.HorizonJours jours</strong>
                        </div>
                        <div>
                            Période :
                            <strong>
                                @Model.Planification?.DateDebut.ToString("dd/MM/yyyy")
                                →
                                @Model.Planification?.DateFin.ToString("dd/MM/yyyy")
                            </strong>
                        </div>
                        <div>
                            Type d'ordre : <strong>@Model.Planification?.TypeOrdre</strong>
                        </div>
                        <div>
                            Statut :
                            <span style="
                                    font-size:0.8rem;
                                    padding:3px 8px;
                                    border-radius:999px;
                                    background:rgba(8,11,32,0.9);
                                    border:1px solid var(--border-soft);
                                ">
                                @Model.Planification?.Statut
                            </span>
                        </div>
                    </div>
                </div>

                <div style="display:flex; flex-direction:column; gap:6px; align-items:flex-end;">
                    <button type="button"
                            class="btn-secondary"
                            style="min-width:170px;"
                            onclick="alert('TODO: Sauvegarder la planification');">
                        Sauvegarder la planif
                    </button>
                    <button type="button"
                            class="btn-secondary"
                            style="min-width:170px;"
                            onclick="alert('TODO: Générer l\\'ordre plus tard');">
                        Générer l'ordre plus tard
                    </button>
                </div>
            </div>

            <!-- BARRE D'OUTILS LIGNES -->
            <div style="display:flex; align-items:center; justify-content:space-between; margin-top:4px;">
                <div style="display:flex; align-items:center; gap:10px;">
                    <div style="font-size:0.9rem; color:var(--text-muted);">
                        @Model.Lignes?.Count() produits finis / semi-finis planifiés
                    </div>
                </div>

                <div style="display:flex; align-items:center; gap:10px;">
                    <div class="job-input-wrapper" style="width:220px;">
                        <input type="text"
                               class="job-input"
                               placeholder="Filtrer par article..."
                               onkeyup="filterMrpLines(this.value)">
                        <span class="job-input-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width:14px; height:14px;">
                                <circle cx="11" cy="11" r="6"></circle>
                                <line x1="16" y1="16" x2="20" y2="20"></line>
                            </svg>
                        </span>
                    </div>
                    <select class="input-primary" style="height:var(--input-height); padding-inline:10px;" onchange="filterMrpType(this.value)">
                        <option value="">Tous les types produit</option>
                        <option value="Fini">Produit fini</option>
                        <option value="Semi-fini">Produit semi-fini</option>
                    </select>
                </div>
            </div>

            <!-- TABLEAU DES LIGNES MRP (sans dates début/fin ordre) -->
            <div class="erp-card" style="margin-top:8px; padding:0; overflow:hidden;">
                <div style="max-height:62vh; overflow:auto;">
                    <table class="erp-table" style="width:100%; border-collapse:collapse;">
                        <thead>
                            <tr>
                                <th style="width:130px;">Code article</th>
                                <th>Libellé</th>
                                <th style="width:120px;">Type produit</th>
                                <th style="width:90px;">Unité</th>
                                <th style="width:120px;">Date besoin</th>
                                <th style="width:100px;">Qté besoin</th>
                                <th style="width:100px;">Stock dispo</th>
                                <th style="width:100px;">Qté à lancer</th>
                            </tr>
                        </thead>
                        <tbody id="mrpLinesBody">
                            @if (Model.Lignes != null && Model.Lignes.Any())
                            {
                                foreach (var l in Model.Lignes)
                                {
                                    <tr class="mrp-line-row"
                                        data-article="@l.CodeArticle"
                                        data-type="@l.TypeProduit">
                                        <td>@l.CodeArticle</td>
                                        <td>@l.LibelleArticle</td>
                                        <td>@l.TypeProduit</td>
                                        <td>@l.Unite</td>
                                        <td>@l.DateBesoin.ToString("dd/MM/yyyy")</td>
                                        <td>@l.QuantiteBesoin</td>
                                        <td>@l.StockDisponible</td>
                                        <td>@l.QuantiteALancer</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" style="text-align:center; padding:32px; color:var(--text-muted);">
                                        Aucune ligne MRP à afficher pour le moment.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </main>
</div>

<!-- POPUP DE DÉCONNEXION -->
<div id="logout-overlay" class="logout-overlay" style="display:none;">
    <div class="logout-modal">
        <h3>Confirmer la déconnexion</h3>
        <p>Voulez-vous vraiment vous déconnecter et revenir à l'écran de choix du profil&nbsp;?</p>

        <form method="post" asp-page-handler="Logout" class="logout-modal-actions">
            <button type="button" class="btn-secondary" onclick="closeLogoutModal()">Non, rester</button>
            <button type="submit" class="btn-primary">Oui, se déconnecter</button>
        </form>
    </div>
</div>

<script>
    function filterMrpLines(term) {
        const rows = document.querySelectorAll('#mrpLinesBody .mrp-line-row');
        const t = (term || '').toLowerCase();

        rows.forEach(r => {
            const article = (r.dataset.article || '').toLowerCase();
            if (!t || article.includes(t)) {
                r.style.display = '';
            } else {
                r.style.display = 'none';
            }
        });
    }

    function filterMrpType(typeVal) {
        const rows = document.querySelectorAll('#mrpLinesBody .mrp-line-row');
        const tv = (typeVal || '').toLowerCase();

        rows.forEach(r => {
            const type = (r.dataset.type || '').toLowerCase();
            if (!tv || type === tv) {
                r.style.display = '';
            } else {
                r.style.display = 'none';
            }
        });
    }
</script>

<script src="~/js/Home.js"></script>
